#!/usr/bin/env php
<?php
/**
 * Development-only CLI â€” completely safe on cheap shared hosting
 */

require_once __DIR__ . '/vendor/autoload.php';

use Symfony\Component\Console\Application;
use Dotenv\Dotenv;

(Dotenv::createImmutable(__DIR__ . '/'))->load();

require_once __DIR__ . '/src/app/Helpers/functions.php';

$cliApp = new Application('Causa Framework', '1.0');

// register commands
$cliApp->add(new \App\DevTools\Commands\MakeControllerCommand());
$cliApp->add(new \App\DevTools\Commands\MakeViewCommand());
$cliApp->add(new \App\DevTools\Commands\MakePageCommand());
$cliApp->add(new \App\DevTools\Commands\ClearViewCacheCommand);
$cliApp->add(new \App\DevTools\Commands\ClearApiCacheCommand);
$cliApp->add(new \App\DevTools\Commands\ClearAllCacheCommand);

$cliApp->run();
